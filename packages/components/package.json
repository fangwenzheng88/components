{
  "name": "@devops-web/components",
  "type": "module",
  "version": "1.0.2-0",
  "description": "",
  "module": "src/index.ts",
  "types": "src/index.ts",
  "unpkg": "dist/devops-web.js",
  "jsdelivr": "dist/devops-web.js",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/",
    "main": "lib/index.cjs",
    "module": "es/index.mjs",
    "types": "es/index.d.ts",
    "exports": {
      ".": {
        "types": "./es/index.d.ts",
        "import": "./es/index.mjs",
        "require": "./lib/index.cjs"
      },
      "./*": "./*"
    }
  },
  "scripts": {
    "build": "npm run clean && pnpm run build:components && pnpm run build:style && pnpm run build:dts",
    "build:components": "vite build --config ./scripts/build.ts",
    "build:style": "node ./scripts/style.js",
    "build:dts": "node ./scripts/dts.js",
    "clean": "rimraf ./lib ./es ./dist",
    "lint-staged": "npx lint-staged",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "prettier": "prettier --write .",
    "type:check": "vue-tsc --noEmit --skipLibCheck",
    "prepublishOnly": "pnpm run build"
  },
  "files": [
    "es",
    "lib",
    "dist"
  ],
  "sideEffects": [
    "dist/*",
    "es/**/style/*",
    "lib/**/style/*",
    "*.less"
  ],
  "keywords": [],
  "author": "",
  "license": "ISC",
  "peerDependencies": {
    "@arco-design/web-vue": ">=2",
    "@devops-web/hooks": ">=0",
    "@devops-web/utils": ">=1",
    "@vueuse/core": ">=10",
    "vue": ">=3.0.0"
  },
  "devDependencies": {
    "@arco-design/web-vue": "^2.52.0",
    "@devops-web/eslint-config": "workspace:*",
    "@devops-web/hooks": "workspace:*",
    "@devops-web/stylelint-config": "workspace:*",
    "@devops-web/utils": "1.0.1",
    "@rushstack/eslint-patch": "^1.2.0",
    "@types/lodash-es": "^4.17.9",
    "@types/node": "^18.16.17",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vitejs/plugin-vue-jsx": "^3.0.1",
    "@vue/compiler-sfc": "^3.3.4",
    "@vueuse/core": "^10.2.1",
    "clean-css": "^5.3.2",
    "eslint": "^8.39.0",
    "glob": "^10.3.3",
    "less": "^4.1.3",
    "lodash-es": "^4.17.21",
    "stylelint": "^15.10.3",
    "ts-morph": "^20.0.0",
    "typescript": "^5.0.4",
    "vite": "^4.3.9",
    "vue": "^3.3.4"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.vue": [
      "stylelint --fix",
      "prettier --write",
      "eslint --fix"
    ],
    "*.{less,css}": [
      "stylelint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "resize-observer-polyfill": "^1.5.1"
  }
}
