{
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true,
        "source.fixAll.stylelint": true,
    },
    "eslint.workingDirectories": [
        {
            "pattern": "./packages/*/"
        }
    ],
    "stylelint.validate": [
        "css",
        "less",
        "postcss",
        "scss",
        "vue",
        "sass"
    ],
    "typescript.tsdk": "node_modules/typescript/lib",
}